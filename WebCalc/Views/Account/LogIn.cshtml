@{
    ViewBag.Title = "Аутентификация";
}

<h2>Аутентификация</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Name")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Password", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Password")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ввойти" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}