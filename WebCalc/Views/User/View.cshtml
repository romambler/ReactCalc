@model DomainModels.Models.User

@{
    ViewBag.Title = "View";
}

<h2>View</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Login)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Login)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Password)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FIO)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FIO)
        </dd>

    </dl>
    <ul>
        History:
        @foreach (var or in Model.OperationResults)
        {
            <li>@or.ExecutionDate @or.InputData @or.Result</li>
        }
    </ul>

    <ul>
        Favorites:
        @foreach (var or in Model.UserFavoriteResults)
        {
            <li>@or.Result.Operation.Name @or.Result.Result</li>
        }
    </ul>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
